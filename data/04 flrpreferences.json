[
    {
        "model": "FlrView",
        "meta_id": "flrpreferences_form_view",
        "data": {
            "name": "Preferences",
            "model": "FlrPreferences",
            "view_type": "form",
            "wizard": true,
            "definition": {
                "structure": [
                    {"section": "Información general"},
                    {"section": "Cambiar contraseña"},
                    {"section": "Cambiar compañía", "groups": ["flrgroup_multicompany"]}
                ],
                "Información general": [
                    {"field": "user", "readonly": true}
                ],
                "Cambiar contraseña": [
                    {
                        "field": "old_password",
                        "options": {
                            "password": true,
                            "viewpassword": true
                        }
                    },
                    {
                        "field": "new_password",
                        "options": {
                            "password": true,
                            "viewpassword": true
                        }
                    },
                    {
                        "field": "confirm_new_password",
                        "options": {
                            "password": true,
                            "viewpassword": true
                        }
                    }
                ],
                "Cambiar compañía": [
                    {"field": "old_company", "readonly": true},
                    {"field": "new_company"}
                ]
            }
        }
    }
]
